# Environment
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=your-very-secure-secret-key-generate-a-new-one-for-production

# Allowed Hosts
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# PostgreSQL Database
DB_NAME=elearning_db
DB_USER=elearning_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Frontend
FRONTEND_URL=https://yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Google SMTP Email Configuration
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-character-app-password
DEFAULT_FROM_EMAIL=E-Learning Platform <noreply@yourdomain.com>
COMPANY_NAME=E-Learning Platform

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=30
JWT_REFRESH_TOKEN_LIFETIME=30

# Localization
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# Media
MAX_UPLOAD_SIZE=104857600
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880

# Certificate
CERTIFICATE_ISSUER_NAME=E-Learning Platform
CERTIFICATE_VALIDITY_YEARS=3

# Logging
DJANGO_LOG_LEVEL=INFO